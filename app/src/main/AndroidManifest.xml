<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.ldnr.nmb.zooproject">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/home_title">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/zoo_map_title" />
        <activity
            android:name=".TankActivity"
            android:label="@string/tank_title" />
        <activity
            android:name=".PopCornActivity"
            android:label="@string/popcorn_title" />
        <activity
            android:name=".AlertActivity"
            android:label="@string/alert_title"
            android:theme="@android:style/Theme.DeviceDefault.Dialog.Alert"/>

        <activity
            android:name=".AnnuaireActivity"
            android:label="@string/title_activity_annuaire"
            android:theme="@android:style/Theme.DeviceDefault.NoActionBar"/>

        <activity
            android:name=".SpecieActivity"
            android:label="@string/specie_title"/>

        <activity
            android:name=".AnimalsActivity"
            android:label="@string/animals_title"/>
    </application>

</manifest>